{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-unused-vars": "warn",
    "no-plusplus": "off"
  },
  "overrides": [
    {
      "files": ["webpack.config.js", "tests/**/*", "main.js"],
      "plugins": ["jest"],
      "env": {
        "node": true,
        "jest/globals": true
      }
    }
  ],
  "ignorePatterns": ["webpack.config.js", "main.js"]
}
